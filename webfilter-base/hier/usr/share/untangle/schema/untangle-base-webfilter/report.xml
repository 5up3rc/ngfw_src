<reports>
  <parameter name="reportTitlePrefix" type="String" value="none"/>
  <parameter name="REPORT_MAX_COUNT" type="Integer" value="5000"/>

  <summarizer class="com.untangle.node.webfilter.reports.WebFilterSummarizer"/>

  <graph name="summary_graph"
         class="com.untangle.node.webfilter.reports.SummaryGraph"
         title="Web Content Control--Summary Graph"/>

  <master-report name="summary"
                 template="MasterOfFourChildren"
                 title="Web Content Control--Summary">
    <report name="http_domains" template="SubRep1H3C2F"/>
    <report name="http_user_hits" template="SubRep1H3C2F"/>
    <report name="http_violators" template="SubRep1H3C2F"/>
    <report name="http_user_sizes" template="SubRep1H3C2F_DM"/>
  </master-report>

  <master-report template="MasterOfOneChild"
                 title="Web Content Control--User Summary"
                 for-each="user">
    <report name="user_domains" template="SubRep1H3C1F"/>
  </master-report>

  <master-report template="MasterOfOneChild"
                 title="Web Content Control--Client Summary"
                 for-each="hname">
    <report name="hname_domains" template="SubRep1H3C1F"/>
  </master-report>

</reports>
