#! /bin/bassh

#
# The script sets a plethora of untangle-vm parameters based on hardware
# such as 32bit vs 64bit, memory size, etc.
#
# IMPORTANT:
# It is not recommended to give over 50% of the memory to the java heap
# This has shown to lead to load spikes and instability on the system.
#

FILE=/usr/share/untangle/conf/untangle-hw.conf

echo "  Customizing HW-related settings for untangle-vm"

ARCH=`uname -m`
MEM=$(awk '/MemTotal/ { print $2 }' < /proc/meminfo)
if [ $MEM -gt 4900000 ] ; then
    MAX_HEAP_SIZE=`echo $MEM | awk '{printf int($1 * .5 / 1000) "m"}'`
    MAX_VIRTUAL_SIZE=`echo $MEM | awk '{printf int($1 * 1.5  / 1000) "m"}'`
    GC_SAFETY_FACTOR=10
    GC_MIN_CYCLE=1
elif [ $MEM -gt 3900000 ] ; then
    MAX_HEAP_SIZE=2000m
    MAX_VIRTUAL_SIZE=6000m
    GC_SAFETY_FACTOR=10
    GC_MIN_CYCLE=2
elif [ $MEM -gt 2900000 ] ; then
    MAX_HEAP_SIZE=1500m
    MAX_VIRTUAL_SIZE=4500m
    GC_SAFETY_FACTOR=20
    GC_MIN_CYCLE=5
elif [ $MEM -gt 1900000 ] ; then
    MAX_HEAP_SIZE=820m
    MAX_VIRTUAL_SIZE=3000m
    GC_SAFETY_FACTOR=50
    GC_MIN_CYCLE=10
elif [ $MEM -gt 900000 ] ; then
    if [ $ARCH = 'x86_64' ]; then
        MAX_HEAP_SIZE=420m
        MAX_VIRTUAL_SIZE=1500m
    else
        MAX_HEAP_SIZE=420m
        MAX_VIRTUAL_SIZE=1500m
    fi
    GC_SAFETY_FACTOR=90
    GC_MIN_CYCLE=10
else
    if [ $ARCH = 'x86_64' ]; then
        MAX_HEAP_SIZE=320m
        MAX_VIRTUAL_SIZE=1500m
    else
        MAX_HEAP_SIZE=320m
        MAX_VIRTUAL_SIZE=1500m
    fi
    GC_SAFETY_FACTOR=90
    GC_MIN_CYCLE=10
fi

MAX_VIRTUAL_SIZE=$(( ${MAX_VIRTUAL_SIZE/m} * 1000 ))

echo "    Maximum heap size        -> ${MAX_HEAP_SIZE}"
echo "    Maximum virtual size     -> ${MAX_VIRTUAL_SIZE}"
echo "    GC safety factor         -> ${GC_SAFETY_FACTOR}"
echo "    GC minimum cycle         -> ${GC_MIN_CYCLE}"
echo "    Max load for reports     -> ${REPORTS_MAX_LOAD}"

#
# Apply the settings
#

mkdir -p `dirname $FILE`
cat >| $FILE <<EOF
max_heap_size="$MAX_HEAP_SIZE"
max_virtual_size="$MAX_VIRTUAL_SIZE"
gc_safety_factor="$GC_SAFETY_FACTOR"
gc_min_cycle="$GC_MIN_CYCLE"
EOF
