# UVM memory management
case $(dpkg-architecture -qDEB_BUILD_ARCH 2> /dev/null) in
  amd64)
    HEAP_SOFT_LIMIT="2 3 4"
    HEAP_HARD_LIMIT="5 6 7 8 9"
    ALPACA_MAX_VIRTUAL_SIZE=250000
    CLAMD_MAX_VIRTUAL_SIZE=250000 ;;
  i386|*)
    HEAP_SOFT_LIMIT="2" 
    HEAP_HARD_LIMIT="3 4 5 6 7 8 9"
    ALPACA_MAX_VIRTUAL_SIZE=125000
    CLAMD_MAX_VIRTUAL_SIZE=125000 ;;
esac
