<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- ===================================================================== -->
<!--                                                                       -->
<!--  Log4j Configuration for UVM                                         -->
<!--                                                                       -->
<!--     Configuration of all uvm loggers lives here.                     -->
<!--                                                                       -->
<!-- ===================================================================== -->

<!-- $Id$ -->

<!--
   | For more configuration infromation and examples see the Jakarta Log4j
   | website: http://jakarta.apache.org/log4j
 -->


<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
                     debug="false">

  <appender name="NODELOG" class="org.apache.log4j.net.SyslogAppender">
    <param name="SyslogHost" value="localhost"/>
    <param name="Facility" value="LOCAL1"/>
    <param name="Threshold" value="ALL"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="node-@NodeLogFileName@: [%c{1}] &lt;%X{SessionID}&gt; %-5p %m%n"/>
    </layout>
  </appender>

  <!-- #                         -->
  <!-- #  node/app debug levels  -->
  <!-- #                         -->

  <category name="com.untangle.uvm.node">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.util">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.token">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.router">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.adblocker">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.adconnector">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.bandwidth">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.boxbackup">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.branding">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.clam">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.commtouch">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.cpd">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.faild">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.firewall">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.ftp">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.http">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.ips">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.ipsec">
    <priority value="INFO"/>
  </category>
 
  <category name="com.untangle.node.datavault">
    <priority value="DEBUG"/>
  </category>
 
  <category name="com.untangle.node.kav">
    <priority value="INFO"/>
  </category>
 
  <category name="com.untangle.node.license">
    <priority value="WARN"/>
  </category>

  <category name="com.untangle.node.mail">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.openvpn">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.phish">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.policy">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.protofilter">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.shield">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.sitefilter">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.spam">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.spamassassin">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.splitd">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.spyware">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.support">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.virus">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.webcache">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.webfilter">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node.classd">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.node">
    <priority value="INFO"/>
  </category>


  <!-- #      VNET debug levels  -->
  <!-- #      DEBUG           new session debugging -->
  <!-- #      INFO            each new session -->
  <!-- #      WARN            exceptions -->
  <category name="com.untangle.uvm.vnet.ArgonConnector">
    <priority value="WARN"/>
  </category>

  <category name="com.untangle.uvm.vnet.Dispatcher">
    <priority value="WARN"/>
  </category>

  <category name="com.untangle.uvm.vnet.TCPSession">
    <priority value="WARN"/>
  </category>

  <category name="com.untangle.uvm.vnet.UDPSession">
    <priority value="WARN"/>
  </category>

  <category name="com.untangle.uvm.vnet.SessionTimes">
    <priority value="WARN"/>
  </category>

  <category name="com.untangle.uvm.vnet.NodeBase">
    <priority value="INFO"/>
  </category>

  <!-- #                         -->
  <!-- #  misc debug levels      -->
  <!-- #                         -->

  <category name="org.apache.catalina">
    <priority value="WARN"/>
  </category>

  <!-- ======================= -->
  <!-- Setup the Root category -->
  <!-- ======================= -->

  <!-- All Node logs go to individual node log files -->
  <root>
    <priority value="WARN"/>
    <appender-ref ref="NODELOG"/>
  </root>
</log4j:configuration>
