  <category name="com.untangle.uvm.vnet.NodeUDPSession">
    <priority value="WARN"/>
  </category>


  <!-- ============================================== -->
  <!-- The Root Category                              -->
  <!-- ============================================== -->

  <root>
    <priority value="WARN"/>
    <appender-ref ref="UVMLOG"/>
  </root>
</log4j:configuration>
