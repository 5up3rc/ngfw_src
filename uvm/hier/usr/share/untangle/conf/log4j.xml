  <!-- ============================================== -->
  <!-- Untangle VNET Categories                       -->
  <!-- #      DEBUG           new session debugging   -->
  <!-- #      INFO            each new session        -->
  <!-- #      WARN            excep                   -->
  <!-- ============================================== -->

  <category name="com.untangle.uvm.vnet">
    <priority value="INFO"/>
  </category>

  <category name="com.untangle.uvm.vnet.ArgonConnector">
    <priority value="WARN"/>
