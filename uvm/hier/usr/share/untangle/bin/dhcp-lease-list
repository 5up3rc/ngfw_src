#!/bin/dash

exec 2> /dev/null

DNS_MASQ_CONF=/etc/dnsmasq.conf

## This should print all of the DHCP Static Leases in the form [<MAC-Address>;<IP Address>\n]*
if [ -f ${DNS_MASQ_CONF} ]; then
    awk '/^dhcp-host=/ { sub( "dhcp-host=", "" ) ; split( $0, m, "," ) ; print m[1] ";" m[2] }' \
        ${DNS_MASQ_CONF}
fi

exit 0
