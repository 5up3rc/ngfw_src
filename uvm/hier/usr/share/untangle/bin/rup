#!/bin/sh

DESTINATION_BASE=@UVM_CONF@/licenses

mkdir -p ${DESTINATION_BASE}

writeFile() {
    local t_dest="${DESTINATION_BASE}/${1}"
    
    ## If the license file already exists, don't expand it
    if [ -f "${t_dest/.ulg$/.ulf}" ]; then
        t_dest=/dev/null
    fi
    
    cat > ${t_dest}
}
