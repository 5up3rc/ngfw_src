#!/bin/sh

if [ $# -lt 1 ] ; then 
	echo "Usage: $0 example-node"
	exit 1
fi	

FAILED=0
mcli extraname $1 "Trial (Expired)" &> /dev/null
if [ $? -ne 0 ] ; then FAILED=1 ; fi
mcli disable $1 &> /dev/null
if [ $? -ne 0 ] ; then FAILED=1 ; fi

if [ $FAILED -ne 0 ] ; then 
    echo "scheduling \"$0 $1\""
    echo "$0 $1 &> /dev/null" | at "+1 hour" &> /dev/null
fi

exit 0