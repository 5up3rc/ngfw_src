#!/bin/sh

#
# This is a simple helper script because I got tired of launching psql and querying to see what the current active queries were
#

/usr/bin/psql -U postgres uvm -c"SELECT a.datname, c.relname, l.transactionid, l.mode, l.granted, a.usename, a.current_query, a.query_start, age(now(), a.query_start) AS "age", a.procpid FROM  pg_stat_activity a JOIN pg_locks l ON l.pid = a.procpid JOIN pg_class c ON c.oid = l.relation WHERE relname not like '%pg_%' ORDER BY a.query_start;"