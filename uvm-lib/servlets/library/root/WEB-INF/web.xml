<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
  @JSP_PRE_COMPILED_SERVLETS@

  <display-name>Installation Servlet</display-name>

  <description>
    Installation Servlet
  </description>
  
  <!-- Launcher, this is used to initiate the session with the     -->
  <!-- library.  this guarantees that the client has been          -->
  <!-- authenticated when they go to download the image to install -->
  <servlet>
    <servlet-name>Launcher</servlet-name>
    <servlet-class>com.untangle.uvm.library.Launcher</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>


  <!-- Installer, this will install a package based on the query string. -->
  <servlet>
    <servlet-name>Installer</servlet-name>
    <servlet-class>com.untangle.uvm.library.ImageInstaller</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Launcher</servlet-name>
    <url-pattern>/launcher</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Installer</servlet-name>
    <url-pattern>/install.png</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>user</role-name>
    </auth-constraint>
  </security-constraint>

  <security-role>
    <role-name>user</role-name>
  </security-role>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Untangle Administration</realm-name>
  </login-config>
</web-app>
