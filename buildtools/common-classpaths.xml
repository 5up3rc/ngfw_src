<project name="common-classpaths" basedir=".">

  <!-- Metavize classpath -->
  <!-- XXX separate into a interface jar for transforms -->
  <fileset id="mvvm.jarset" file="../mvvm/output/jar/mvvm.jar"/>

  <path id="mvvm.classpath">
    <fileset refid="mvvm.jarset"/>
  </path>

  <!-- Metavize Remote Client classpath -->
  <fileset id="mvvm-client.jarset" file="../mvvm/output/jar/mvvm-client.jar"/>

  <path id="mvvm-client.classpath">
    <fileset refid="mvvm-client.jarset"/>
  </path>

  <fileset id="gui.jarset" file="../gui/output/jar/gui.jar"/>

  <path id="gui.classpath">
    <fileset refid="gui.jarset"/>
  </path>

  <!-- Http Transform classpath -->
  <fileset id="http.jarset" file="../tran/output/jar/http-casing.mar"/>

  <path id="http.classpath">
    <fileset refid="http.jarset"/>
  </path>

  <!-- JNetcap classpath -->
  <fileset id="jnetcap.jarset" file="../jnetcap/output/jar/jnetcap.jar"/>

  <path id="jnetcap.classpath">
    <fileset refid="jnetcap.jarset"/>
  </path>

  <!-- JVector classpath -->
  <fileset id="jvector.jarset" file="../jvector/output/jar/jvector.jar"/>

  <path id="jvector.classpath">
    <fileset refid="jvector.jarset"/>
  </path>

  <!-- Thirdparty classpath -->
  <fileset id="tomcat.jarset" dir="${TOMCAT_EMBED_HOME}/lib">
    <include name="*.jar"/>
    <exclude name="commons-collections-3.1.jar"/>
    <exclude name="commons-logging.jar"/>
  </fileset>

  <path id="tomcat.classpath">
    <fileset refid="tomcat.jarset"/>
  </path>

  <fileset id="trove.jarset" dir="${TROVE_HOME}/lib">
    <include name="trove.jar"/>
  </fileset>

  <path id="trove.classpath">
    <fileset refid="trove.jarset"/>
  </path>

  <fileset id="hibernate.jarset" dir="${HIBERNATE_HOME}">
    <include name="hibernate3.jar"/>
    <include name="lib/*.jar"/>
    <exclude name="lib/concurrent-*.jar"/>
    <exclude name="lib/c3p0-*.jar"/>
  </fileset>

  <fileset id="hibernate.gui.jarset" dir="${HIBERNATE_HOME}">
    <include name="hibernate3.jar"/>
    <include name="lib/asm.jar"/>
    <include name="lib/commons-logging-1.0.4.jar"/>
    <include name="lib/cglib-2.1.jar"/>
    <exclude name="lib/concurrent-1.3.2.jar"/>
    <exclude name="lib/ant-1.6.3.jar"/>
    <exclude name="lib/log4j-1.2.9.jar"/>
  </fileset>

  <path id="hibernate.classpath">
    <fileset refid="hibernate.jarset"/>
  </path>

  <fileset id="c3p0.jarset" dir="${C3P0_HOME}/lib">
    <include name="c3p0-0.9.0.jar"/>
  </fileset>

  <path id="c3p0.classpath">
    <fileset refid="c3p0.jarset"/>
  </path>

  <fileset id="concurrent.jarset" dir="${CONCURRENT_HOME}/lib">
    <include name="concurrent.jar"/>
  </fileset>

  <path id="concurrent.classpath">
    <fileset refid="concurrent.jarset"/>
  </path>

  <fileset id="javamail.jarset" dir="${JAVAMAIL_HOME}">
    <include name="mail.jar"/>
  </fileset>

  <path id="javamail.classpath">
    <fileset refid="javamail.jarset"/>
  </path>

  <fileset id="activation.jarset" dir="${JAF_HOME}">
    <include name="activation.jar"/>
  </fileset>

  <path id="activation.classpath">
    <fileset refid="activation.jarset"/>
  </path>

  <fileset id="junit.jarset" dir="${JUNIT_HOME}">
    <include name="junit.jar"/>
  </fileset>

  <path id="junit.classpath">
    <fileset refid="junit.jarset"/>
  </path>

  <fileset id="log4j.jarset" dir="${LOG4J_HOME}/dist/lib">
    <include name="log4j-1.2.9.jar"/>
  </fileset>

  <path id="log4j.classpath">
    <fileset refid="log4j.jarset"/>
  </path>

  <fileset id="netbeans.jarset" dir="${NETBEANS_HOME}">
    <include name="netbeans-3.5.jar"/>
  </fileset>

  <path id="netbeans.classpath">
    <fileset refid="netbeans.jarset"/>
  </path>

  <fileset id="itext.jarset" dir="${ITEXT_HOME}">
    <include name="itext-1.2.jar"/>
  </fileset>

  <path id="itext.classpath">
    <fileset refid="itext.jarset"/>
  </path>

  <fileset id="kunststoff.jarset" dir="${KUNSTSTOFF_HOME}">
    <include name="kunststoff-mv.jar"/>
  </fileset>

  <path id="kunststoff.classpath">
    <fileset refid="kunststoff.jarset"/>
  </path>

  <fileset id="jfreechart.jarset" dir="${JFREECHART_HOME}">
    <include name="jfreechart-0.9.21.jar"/>
    <include name="jcommon-0.9.6.jar"/>
  </fileset>

  <path id="jfreechart.classpath">
    <fileset refid="jfreechart.jarset"/>
  </path>

  <fileset id="jnlp.jarset" dir="${JDK_HOME}/sample/jnlp/servlet">
    <include name="jnlp.jar"/>
  </fileset>

  <path id="jnlp.classpath">
    <fileset refid="jnlp.jarset"/>
  </path>

  <fileset id="jnlp-servlet.jarset" dir="${JDK_HOME}/sample/jnlp/servlet">
    <include name="jnlp-servlet.jar"/>
  </fileset>

  <path id="jnlp-servlet.classpath">
    <fileset refid="jnlp-servlet.jarset"/>
  </path>

  <fileset id="jasperreports.jarset" dir="${JASPER_REPORTS_HOME}/dist">
    <include name="jasperreports-0.6.8.jar"/>
  </fileset>

  <path id="jasperreports.classpath">
    <fileset refid="jasperreports.jarset"/>
  </path>

  <fileset id="hibernatedoclet.jarset" dir="${XDOCLET_HOME}">
    <include name="commons-collections-2.0.jar"/>
    <include name="commons-logging.jar"/>
    <include name="xdoclet-1.2.2.jar"/>
    <include name="xdoclet-hibernate-module-1.2.2.jar"/>
    <include name="xdoclet-xdoclet-module-1.2.2.jar"/>
    <include name="xjavadoc-1.1.jar"/>
  </fileset>

  <path id="hibernatedoclet.classpath">
    <fileset refid="hibernatedoclet.jarset"/>
  </path>

  <path id="codegen.classpath">
    <path refid="hibernate.classpath"/>
    <path refid="hibernate.tools.classpath"/>
  </path>

  <fileset id="postgresql.jarset" dir="${POSTGRES_HOME}">
    <include name="*jdbc3.jar"/>
  </fileset>

  <fileset id="bcel.jarset" dir="${BCEL_HOME}">
    <include name="bcel-5.1.jar"/>
  </fileset>

  <path id="bcel.classpath">
    <fileset refid="bcel.jarset"/>
  </path>

  <!-- Kind of a hack to include YJP only when it is present on the building machine. XXX -->
  <fileset id="yjp.jarset" dir="/opt">
    <include name="yjp/lib/yjp-controller-api-redist.jar"/>
  </fileset>

  <path id="yjp.classpath">
    <fileset refid="yjp.jarset"/>
  </path>

  <path id="gui.thirdparty.classpath">
    <path refid="netbeans.jarset"/>
    <path refid="kunststoff.jarset"/>
    <path refid="jfreechart.jarset"/>
    <path refid="log4j.jarset"/>
  </path>

  <path id="mvvm.thirdparty.classpath">
    <path refid="jnlp-servlet.classpath"/>
    <path refid="activation.classpath"/>
    <path refid="bcel.classpath"/>
    <path refid="concurrent.classpath"/>
    <path refid="hibernate.classpath"/>
    <path refid="jasperreports.classpath"/>
    <path refid="javamail.classpath"/>
    <path refid="junit.classpath"/>
    <path refid="log4j.classpath"/>
    <path refid="tomcat.classpath"/>
    <path refid="trove.classpath"/>
    <path refid="yjp.classpath"/>
  </path>
</project>
