<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>Portal</display-name>

  <servlet>
    <servlet-name>WebProxy</servlet-name>
    <servlet-class>
      com.metavize.tran.portal.proxy.WebProxy
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>WebProxy</servlet-name>
    <url-pattern>/http/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>WebProxy</servlet-name>
    <url-pattern>/https/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ForwardServlet</servlet-name>
    <servlet-class>
      com.metavize.tran.portal.proxy.ForwardServlet
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ForwardServlet</servlet-name>
    <url-pattern>/forward</url-pattern>
  </servlet-mapping>

  <security-constraint>
    <web-resource-collection>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>user</role-name>
    </auth-constraint>
  </security-constraint>

  <security-role>
    <role-name>user</role-name>
  </security-role>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Portal User</realm-name>
  </login-config>
</web-app>
