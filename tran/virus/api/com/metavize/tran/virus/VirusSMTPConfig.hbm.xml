<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.virus.VirusSMTPConfig"
        table="TR_VIRUS_SMTP_CONFIG"
    >

        <id
            name="id"
            column="CONFIG_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-VirusSMTPConfig.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="msgAction"
            type="com.metavize.tran.virus.SMTPVirusMessageActionUserType"
            update="true"
            insert="true"
            column="ACTION"
            not-null="true"
        />

        <property
            name="notifyAction"
            type="com.metavize.tran.mail.papi.smtp.SMTPNotifyActionUserType"
            update="true"
            insert="true"
            column="NOTIFY_ACTION"
            not-null="true"
        />

        <property
            name="scan"
            type="boolean"
            update="true"
            insert="true"
            column="SCAN"
            not-null="true"
        />

        <property
            name="notes"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NOTES"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-VirusSMTPConfig.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
