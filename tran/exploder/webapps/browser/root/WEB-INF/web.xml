<!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>Exploder</display-name>

  <filter>
    <filter-name>XsltFilter</filter-name>
    <filter-class>com.metavize.tran.exploder.browser.XsltFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>XsltFilter</filter-name>
    <servlet-name>FileLister</servlet-name>
  </filter-mapping>

  <servlet>
    <servlet-name>FileLister</servlet-name>
    <servlet-class>
      com.metavize.tran.exploder.browser.FileLister
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>FileLister</servlet-name>
    <url-pattern>/ls</url-pattern>
  </servlet-mapping>

  @JSP_PRE_COMPILED_SERVLETS@

</web-app>
