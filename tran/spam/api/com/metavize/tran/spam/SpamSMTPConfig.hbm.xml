<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.spam.SpamSMTPConfig"
        table="TR_SPAM_SMTP_CONFIG"
    >

        <id
            name="id"
            column="CONFIG_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SpamSMTPConfig.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="msgAction"
            type="com.metavize.tran.spam.SMTPSpamMessageActionUserType"
            update="true"
            insert="true"
            column="MSG_ACTION"
            not-null="true"
        />

        <property
            name="notifyAction"
            type="com.metavize.tran.spam.SpamSMTPNotifyActionUserType"
            update="true"
            insert="true"
            column="NOTIFY_ACTION"
            not-null="true"
        />

        <property
            name="throttle"
            type="boolean"
            update="true"
            insert="true"
            column="THROTTLE"
            not-null="true"
        />

        <property
            name="throttleSec"
            type="int"
            update="true"
            insert="true"
            column="THROTTLE_SEC"
            not-null="true"
        />

        <property
            name="scan"
            type="boolean"
            update="true"
            insert="true"
            column="SCAN"
            not-null="true"
        />

        <property
            name="strength"
            type="int"
            update="true"
            insert="true"
            column="STRENGTH"
            not-null="true"
        />

        <property
            name="msgSizeLimit"
            type="int"
            update="true"
            insert="true"
            column="MSG_SIZE_LIMIT"
            not-null="true"
        />

        <property
            name="notes"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NOTES"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SpamSMTPConfig.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
