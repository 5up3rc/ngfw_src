<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.spam.SpamSettings"
        table="TR_SPAM_SETTINGS"
    >

        <id
            name="id"
            column="SETTINGS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SpamSettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="tid"
            class="com.metavize.mvvm.security.Tid"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="TID"
            not-null="true"
        />

        <many-to-one
            name="SMTPInbound"
            class="com.metavize.tran.spam.SpamSMTPConfig"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="SMTP_INBOUND"
            not-null="true"
        />

        <many-to-one
            name="SMTPOutbound"
            class="com.metavize.tran.spam.SpamSMTPConfig"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="SMTP_OUTBOUND"
            not-null="true"
        />

        <many-to-one
            name="POPInbound"
            class="com.metavize.tran.spam.SpamPOPConfig"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="POP_INBOUND"
            not-null="true"
        />

        <many-to-one
            name="POPOutbound"
            class="com.metavize.tran.spam.SpamPOPConfig"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="POP_OUTBOUND"
            not-null="true"
        />

        <many-to-one
            name="IMAPInbound"
            class="com.metavize.tran.spam.SpamIMAPConfig"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="IMAP_INBOUND"
            not-null="true"
        />

        <many-to-one
            name="IMAPOutbound"
            class="com.metavize.tran.spam.SpamIMAPConfig"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="IMAP_OUTBOUND"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SpamSettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
