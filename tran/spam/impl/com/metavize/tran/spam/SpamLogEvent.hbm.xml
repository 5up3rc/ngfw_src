<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.spam.SpamLogEvent"
        table="TR_SPAM_EVT"
        mutable="false"
    >

        <id
            name="id"
            column="EVENT_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SpamLogEvent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="messageInfo"
            class="com.metavize.tran.mail.papi.MessageInfo"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="MSG_ID"
        />

        <property
            name="score"
            type="float"
            update="true"
            insert="true"
            column="SCORE"
        />

        <property
            name="spam"
            type="boolean"
            update="true"
            insert="true"
            column="IS_SPAM"
        />

        <property
            name="action"
            type="com.metavize.tran.spam.SpamMessageActionUserType"
            update="true"
            insert="true"
            column="ACTION"
        />

        <property
            name="vendorName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="VENDOR_NAME"
        />

        <property
            name="timeStamp"
            type="java.util.Date"
            update="true"
            insert="true"
            column="TIME_STAMP"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SpamLogEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
