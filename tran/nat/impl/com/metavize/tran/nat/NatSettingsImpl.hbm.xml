<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.nat.NatSettingsImpl"
        table="tr_nat_settings"
    >

        <id
            name="id"
            column="settings_id"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-NatSettingsImpl.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="tid"
            class="com.metavize.mvvm.security.Tid"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="tid"
            not-null="true"
        />

        <property
            name="setupState"
            type="com.metavize.mvvm.networking.SetupStateUserType"
            update="true"
            insert="true"
        >
            <column
                name="setup_state" 
            />
        </property>

        <property
            name="natEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="nat_enabled"
        />

        <property
            name="natInternalAddress"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="nat_internal_addr" 
                sql-type="inet"
            />
        </property>

        <property
            name="natInternalSubnet"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="nat_internal_subnet" 
                sql-type="inet"
            />
        </property>

        <property
            name="dmzEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="dmz_enabled"
        />

        <property
            name="dmzLoggingEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="dmz_logging_enabled"
        />

        <property
            name="dmzAddress"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="dmz_address" 
                sql-type="inet"
            />
        </property>

        <list
            name="redirectList"
            table="tr_nat_redirects"
            lazy="false"
            cascade="all"
        >

            <key
                column="setting_id"
            >
            </key>

            <index
                column="position"
            />

            <many-to-many
                class="com.metavize.mvvm.networking.RedirectRule"
                column="rule_id"
                outer-join="auto"
             />

        </list>

        <property
            name="dhcpEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="dhcp_enabled"
        />

        <property
            name="dhcpStartAddress"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="dhcp_s_address" 
                sql-type="inet"
            />
        </property>

        <property
            name="dhcpEndAddress"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="dhcp_e_address" 
                sql-type="inet"
            />
        </property>

        <property
            name="dhcpLeaseTime"
            type="int"
            update="true"
            insert="true"
            column="dhcp_lease_time"
        />

        <list
            name="dhcpLeaseList"
            table="tr_dhcp_leases"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="setting_id"
            >
            </key>

            <index
                column="position"
            />

            <many-to-many
                class="com.metavize.mvvm.networking.DhcpLeaseRule"
                column="rule_id"
                outer-join="auto"
             />

        </list>

        <property
            name="dnsEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="dns_enabled"
        />

        <property
            name="dnsLocalDomain"
            type="com.metavize.mvvm.type.HostNameUserType"
            update="true"
            insert="true"
        >
            <column
                name="dns_local_domain" 
            />
        </property>

        <list
            name="dnsStaticHostList"
            table="tr_nat_dns_hosts"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="setting_id"
            >
            </key>

            <index
                column="position"
            />

            <many-to-many
                class="com.metavize.mvvm.networking.DnsStaticHostRule"
                column="rule_id"
                outer-join="auto"
             />

        </list>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-NatSettingsImpl.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
