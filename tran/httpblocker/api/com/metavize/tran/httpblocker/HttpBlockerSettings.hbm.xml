<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.httpblocker.HttpBlockerSettings"
        table="TR_HTTPBLK_SETTINGS"
    >

        <id
            name="id"
            column="SETTINGS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-HttpBlockerSettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="tid"
            class="com.metavize.mvvm.security.Tid"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="TID"
            not-null="true"
        />

        <many-to-one
            name="blockTemplate"
            class="com.metavize.tran.httpblocker.BlockTemplate"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="TEMPLATE"
            not-null="true"
        />

        <property
            name="blockAllIpHosts"
            type="boolean"
            update="true"
            insert="true"
            column="BLOCK_ALL_IP_HOSTS"
            not-null="true"
        />

        <property
            name="fascistMode"
            type="boolean"
            update="true"
            insert="true"
            column="FASCIST_MODE"
        />

        <list
            name="passedClients"
            table="TR_HTTPBLK_PASSED_CLIENTS"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTING_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.tran.IPMaddrRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <list
            name="passedUrls"
            table="TR_HTTPBLK_PASSED_URLS"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTING_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.tran.StringRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <list
            name="blockedUrls"
            table="TR_HTTPBLK_BLOCKED_URLS"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTING_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.tran.StringRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <list
            name="blockedMimeTypes"
            table="TR_HTTPBLK_MIME_TYPES"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTING_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.tran.MimeTypeRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <list
            name="blockedExtensions"
            table="TR_HTTPBLK_EXTENSIONS"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTING_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.tran.StringRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <list
            name="blacklistCategories"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTING_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <one-to-many
                  class="com.metavize.tran.httpblocker.BlacklistCategory"
            />

        </list>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-HttpBlockerSettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
