<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.httpblocker.BlacklistCategory"
        table="TR_HTTPBLK_BLCAT"
    >

        <id
            name="id"
            column="CATEGORY_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-BlacklistCategory.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NAME"
        />

        <property
            name="displayName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="DISPLAY_NAME"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="DESCRIPTION"
        />

        <property
            name="blockDomains"
            type="boolean"
            update="true"
            insert="true"
            column="BLOCK_DOMAINS"
        />

        <property
            name="blockUrls"
            type="boolean"
            update="true"
            insert="true"
            column="BLOCK_URLS"
        />

        <property
            name="blockExpressions"
            type="boolean"
            update="true"
            insert="true"
            column="BLOCK_EXPRESSIONS"
        />

        <property
            name="logOnly"
            type="boolean"
            update="true"
            insert="true"
            column="LOG_ONLY"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-BlacklistCategory.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
