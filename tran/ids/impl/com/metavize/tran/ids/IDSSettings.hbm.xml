<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.ids.IDSSettings"
        table="TR_IDS_SETTINGS"
    >

        <id
            name="ID"
            column="SETTINGS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-IDSSettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="maxChunks"
            type="int"
            update="true"
            insert="true"
            column="MAX_CHUNKS"
        />

        <many-to-one
            name="tid"
            class="com.metavize.mvvm.security.Tid"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="TID"
            not-null="true"
        />

        <list
            name="rules"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTINGS_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <one-to-many
                  class="com.metavize.tran.ids.IDSRule"
            />

        </list>

        <list
            name="variables"
            table="TR_IDS_MUTABLE_VARIABLES"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTING_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.tran.ids.IDSVariable"
                column="VARIABLE_ID"
                outer-join="auto"
             />

        </list>

        <list
            name="immutableVariables"
            table="TR_IDS_IMMUTABLE_VARIABLES"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTING_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.tran.ids.IDSVariable"
                column="VARIABLE_ID"
                outer-join="auto"
             />

        </list>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-IDSSettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
