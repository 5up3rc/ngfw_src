<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.reporting.Schedule"
        table="TR_REPORTING_SCHED"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Schedule.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="daily"
            type="boolean"
            update="true"
            insert="true"
            column="DAILY"
            not-null="true"
        />

        <list
            name="weeklySched"
            table="TR_REPORTING_WK_SCHED"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTING_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.tran.reporting.WeeklyScheduleRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <property
            name="monthlyNDaily"
            type="boolean"
            update="true"
            insert="true"
            column="MONTHLY_N_DAILY"
            not-null="true"
        />

        <property
            name="monthlyNDayOfWk"
            type="int"
            update="true"
            insert="true"
            column="MONTHLY_N_DAY_OF_WK"
            not-null="true"
        />

        <property
            name="monthlyNFirst"
            type="boolean"
            update="true"
            insert="true"
            column="MONTHLY_N_FIRST"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Schedule.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
