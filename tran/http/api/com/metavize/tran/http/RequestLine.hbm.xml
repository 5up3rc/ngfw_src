<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.http.RequestLine"
        table="TR_HTTP_REQ_LINE"
        mutable="false"
    >

        <id
            name="id"
            column="REQUEST_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-RequestLine.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="pipelineEndpoints"
            class="com.metavize.mvvm.tran.PipelineEndpoints"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="PL_ENDP_ID"
            not-null="true"
        />

        <property
            name="method"
            type="com.metavize.tran.http.HttpMethodUserType"
            update="true"
            insert="true"
            column="METHOD"
        />

        <property
            name="requestUri"
            type="com.metavize.mvvm.type.UriUserType"
            update="true"
            insert="true"
            column="URI"
        />

        <one-to-one
            name="httpRequestEvent"
            class="com.metavize.tran.http.HttpRequestEvent"
            cascade="none"
            outer-join="auto"
            constrained="false"
            property-ref="requestLine"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-RequestLine.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
