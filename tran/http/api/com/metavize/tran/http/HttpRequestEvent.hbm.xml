<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.http.HttpRequestEvent"
        table="TR_HTTP_EVT_REQ"
        mutable="false"
    >

        <id
            name="id"
            column="EVENT_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-HttpRequestEvent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="requestLine"
            class="com.metavize.tran.http.RequestLine"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="REQUEST_ID"
        />

        <property
            name="host"
            type="java.lang.String"
            update="true"
            insert="true"
            column="HOST"
        />

        <property
            name="contentLength"
            type="int"
            update="true"
            insert="true"
            column="CONTENT_LENGTH"
        />

        <property
            name="timeStamp"
            type="java.util.Date"
            update="true"
            insert="true"
            column="TIME_STAMP"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-HttpRequestEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
