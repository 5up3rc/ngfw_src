<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.firewall.FirewallEvent"
        table="TR_FIREWALL_EVT"
        mutable="false"
    >

        <id
            name="id"
            column="EVENT_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-FirewallEvent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="wasBlocked"
            type="boolean"
            update="true"
            insert="true"
            column="WAS_BLOCKED"
        />

        <property
            name="ruleIndex"
            type="int"
            update="true"
            insert="true"
            column="RULE_INDEX"
        />

        <many-to-one
            name="rule"
            class="com.metavize.tran.firewall.FirewallRule"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="RULE_ID"
        />

        <many-to-one
            name="pipelineEndpoints"
            class="com.metavize.mvvm.tran.PipelineEndpoints"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="PL_ENDP_ID"
            not-null="true"
        />

        <property
            name="timeStamp"
            type="java.util.Date"
            update="true"
            insert="true"
            column="TIME_STAMP"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-FirewallEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
