<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.firewall.FirewallRule"
        table="FIREWALL_RULE"
    >

        <id
            name="id"
            column="RULE_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-FirewallRule.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="trafficBlocker"
            type="boolean"
            update="true"
            insert="true"
            column="IS_TRAFFIC_BLOCKER"
        />

        <property
            name="inbound"
            type="boolean"
            update="true"
            insert="true"
            column="inbound"
        />

        <property
            name="outbound"
            type="boolean"
            update="true"
            insert="true"
            column="outbound"
        />

        <property
            name="protocol"
            type="com.metavize.mvvm.type.firewall.ProtocolMatcherUserType"
            update="true"
            insert="true"
        >
            <column
                name="PROTOCOL_MATCHER" 
            />
        </property>

        <property
            name="srcAddress"
            type="com.metavize.mvvm.type.firewall.IPMatcherUserType"
            update="true"
            insert="true"
        >
            <column
                name="SRC_IP_MATCHER" 
            />
        </property>

        <property
            name="dstAddress"
            type="com.metavize.mvvm.type.firewall.IPMatcherUserType"
            update="true"
            insert="true"
        >
            <column
                name="DST_IP_MATCHER" 
            />
        </property>

        <property
            name="srcPort"
            type="com.metavize.mvvm.type.firewall.PortMatcherUserType"
            update="true"
            insert="true"
        >
            <column
                name="SRC_PORT_MATCHER" 
            />
        </property>

        <property
            name="dstPort"
            type="com.metavize.mvvm.type.firewall.PortMatcherUserType"
            update="true"
            insert="true"
        >
            <column
                name="DST_PORT_MATCHER" 
            />
        </property>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NAME"
        />

        <property
            name="category"
            type="java.lang.String"
            update="true"
            insert="true"
            column="CATEGORY"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="DESCRIPTION"
        />

        <property
            name="live"
            type="boolean"
            update="true"
            insert="true"
            column="LIVE"
        />

        <property
            name="alert"
            type="boolean"
            update="true"
            insert="true"
            column="ALERT"
        />

        <property
            name="log"
            type="boolean"
            update="true"
            insert="true"
            column="LOG"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-FirewallRule.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
