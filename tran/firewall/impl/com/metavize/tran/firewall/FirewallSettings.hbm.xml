<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.firewall.FirewallSettings"
        table="TR_FIREWALL_SETTINGS"
    >

        <id
            name="id"
            column="SETTINGS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-FirewallSettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="tid"
            class="com.metavize.mvvm.security.Tid"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="TID"
            not-null="true"
        />

        <property
            name="quickExit"
            type="boolean"
            update="true"
            insert="true"
            column="IS_QUICKEXIT"
        />

        <property
            name="rejectSilently"
            type="boolean"
            update="true"
            insert="true"
            column="IS_REJECT_SILENT"
        />

        <property
            name="defaultAccept"
            type="boolean"
            update="true"
            insert="true"
            column="IS_DEFAULT_ACCEPT"
        />

        <list
            name="firewallRuleList"
            table="TR_FIREWALL_RULES"
            lazy="false"
            cascade="all"
        >

            <key
                column="SETTING_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.tran.firewall.FirewallRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-FirewallSettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
