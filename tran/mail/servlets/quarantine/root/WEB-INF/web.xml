<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>Quarantine Web App</display-name>

  <servlet>
    <servlet-name>QuarantineMain</servlet-name>
    <servlet-class>com.metavize.tran.mail.web.euv.QuarantineEnduserServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
 </servlet>

  <servlet>
    <servlet-name>InboxMaintenenceControler</servlet-name>
    <servlet-class>com.metavize.tran.mail.web.euv.InboxMaintenenceControler</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>RequestDigestControler</servlet-name>
    <servlet-class>com.metavize.tran.mail.web.euv.RequestDigestControler</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>SafelistMaintenenceControler</servlet-name>
    <servlet-class>com.metavize.tran.mail.web.euv.SafelistMaintenenceControler</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>UnremapperControler</servlet-name>
    <servlet-class>com.metavize.tran.mail.web.euv.UnremapperControler</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>RemapperControler</servlet-name>
    <servlet-class>com.metavize.tran.mail.web.euv.RemapperControler</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  @JSP_PRE_COMPILED_SERVLETS@

  <servlet-mapping>
    <servlet-name>InboxMaintenenceControler</servlet-name>
    <url-pattern>/manageuser</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RequestDigestControler</servlet-name>
    <url-pattern>/requestdigest</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SafelistMaintenenceControler</servlet-name>
    <url-pattern>/safelist</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UnremapperControler</servlet-name>
    <url-pattern>/unmp</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>RemapperControler</servlet-name>
    <url-pattern>/mp</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>

  <!--
      <servlet-mapping>
      <servlet-name>RequestDigestControler</servlet-name>
      <url-pattern>/</url-pattern>
      </servlet-mapping>
  -->

</web-app>
