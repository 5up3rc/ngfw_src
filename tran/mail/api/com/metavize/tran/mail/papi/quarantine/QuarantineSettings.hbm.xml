<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.mail.papi.quarantine.QuarantineSettings"
        table="TR_MAIL_QUARANTINE_SETTINGS"
    >

        <id
            name="id"
            column="SETTINGS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-QuarantineSettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <list
            name="allowedAddressPatterns"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTINGS_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <one-to-many
                  class="com.metavize.tran.mail.papi.EmailAddressRule"
            />

        </list>

        <list
            name="addressRemaps"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTINGS_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <one-to-many
                  class="com.metavize.tran.mail.papi.EmailAddressPairRule"
            />

        </list>

        <property
            name="maxQuarantineTotalSz"
            type="long"
            update="true"
            insert="true"
            column="MAX_QUARANTINE_SZ"
            not-null="true"
        />

        <property
            name="digestHourOfDay"
            type="int"
            update="true"
            insert="true"
            column="HOUR_IN_DAY"
        />

        <property
            name="digestMinuteOfDay"
            type="int"
            update="true"
            insert="true"
            column="MINUTE_IN_DAY"
        />

        <property
            name="secretKey"
            type="binary"
            update="true"
            insert="true"
            column="SECRET_KEY"
            length="32"
            not-null="true"
        />

        <property
            name="maxMailIntern"
            type="long"
            update="true"
            insert="true"
            column="MAX_INTERN_TIME"
            not-null="true"
        />

        <property
            name="maxIdleInbox"
            type="long"
            update="true"
            insert="true"
            column="MAX_IDLE_INBOX_TIME"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-QuarantineSettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
