<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.mail.papi.MessageInfo"
        table="TR_MAIL_MESSAGE_INFO"
        mutable="false"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-MessageInfo.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <set
            name="addresses"
            lazy="false"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="MSG_ID"
            >
            </key>

            <one-to-many
                  class="com.metavize.tran.mail.papi.MessageInfoAddr"
            />

        </set>

        <many-to-one
            name="pipelineEndpoints"
            class="com.metavize.mvvm.tran.PipelineEndpoints"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="PL_ENDP_ID"
            not-null="true"
        />

        <property
            name="subject"
            type="java.lang.String"
            update="true"
            insert="true"
            column="SUBJECT"
            not-null="true"
        />

        <property
            name="serverType"
            type="char"
            update="true"
            insert="true"
            column="SERVER_TYPE"
            length="1"
            not-null="true"
        />

        <property
            name="timeStamp"
            type="java.util.Date"
            update="true"
            insert="true"
            column="TIME_STAMP"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MessageInfo.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
