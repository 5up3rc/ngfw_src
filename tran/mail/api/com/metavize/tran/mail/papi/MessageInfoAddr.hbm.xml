<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.mail.papi.MessageInfoAddr"
        table="TR_MAIL_MESSAGE_INFO_ADDR"
        mutable="false"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-MessageInfoAddr.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="messageInfo"
            class="com.metavize.tran.mail.papi.MessageInfo"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="MSG_ID"
            not-null="true"
        />

        <property
            name="position"
            type="int"
            update="true"
            insert="true"
            column="POSITION"
            not-null="true"
        />

        <property
            name="addr"
            type="java.lang.String"
            update="true"
            insert="true"
            column="ADDR"
            not-null="true"
        />

        <property
            name="personal"
            type="java.lang.String"
            update="true"
            insert="true"
            column="PERSONAL"
        />

        <property
            name="kind"
            type="com.metavize.tran.mail.papi.AddressKindUserType"
            update="true"
            insert="true"
            column="KIND"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MessageInfoAddr.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
