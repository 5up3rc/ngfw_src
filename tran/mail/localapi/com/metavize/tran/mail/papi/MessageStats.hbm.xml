<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.mail.papi.MessageStats"
        table="TR_MAIL_MESSAGE_STATS"
        mutable="false"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-MessageStats.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="messageInfo"
            class="com.metavize.tran.mail.papi.MessageInfo"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="MSG_ID"
        />

        <property
            name="numBytes"
            type="long"
            update="true"
            insert="true"
            column="MSG_BYTES"
        />

        <property
            name="numAttachments"
            type="int"
            update="true"
            insert="true"
            column="MSG_ATTACHMENTS"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MessageStats.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
