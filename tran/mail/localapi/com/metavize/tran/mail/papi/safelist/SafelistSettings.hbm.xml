<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.mail.papi.safelist.SafelistSettings"
        table="TR_MAIL_SAFELS_SETTINGS"
    >

        <id
            name="id"
            column="SAFELS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SafelistSettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="recipient"
            class="com.metavize.tran.mail.papi.safelist.SafelistRecipient"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="RECIPIENT"
            not-null="true"
        />

        <many-to-one
            name="sender"
            class="com.metavize.tran.mail.papi.safelist.SafelistSender"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="SENDER"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SafelistSettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
