<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.spyware.SpywareSettings"
        table="TR_SPYWARE_SETTINGS"
    >

        <id
            name="id"
            column="SETTINGS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SpywareSettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="tid"
            class="com.metavize.mvvm.security.Tid"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="TID"
            not-null="true"
        />

        <property
            name="activeXEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="ACTIVEX_ENABLED"
        />

        <property
            name="cookieBlockerEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="COOKIE_ENABLED"
        />

        <property
            name="spywareEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="SPYWARE_ENABLED"
        />

        <property
            name="blockAllActiveX"
            type="boolean"
            update="true"
            insert="true"
            column="BLOCK_ALL_ACTIVEX"
        />

        <property
            name="urlBlacklistEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="URL_BLACKLIST_ENABLED"
        />

        <property
            name="activeXDetails"
            type="java.lang.String"
            update="true"
            insert="true"
            column="ACTIVEX_DETAILS"
        />

        <property
            name="cookieBlockerDetails"
            type="java.lang.String"
            update="true"
            insert="true"
            column="COOKIE_DETAILS"
        />

        <property
            name="spywareDetails"
            type="java.lang.String"
            update="true"
            insert="true"
            column="SPYWARE_DETAILS"
        />

        <property
            name="blockAllActiveXDetails"
            type="java.lang.String"
            update="true"
            insert="true"
            column="BLOCK_ALL_ACTIVEX_DETAILS"
        />

        <property
            name="urlBlacklistDetails"
            type="java.lang.String"
            update="true"
            insert="true"
            column="URL_BLACKLIST_DETAILS"
        />

        <list
            name="activeXRules"
            table="TR_SPYWARE_AR"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTINGS_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.tran.StringRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <list
            name="cookieRules"
            table="TR_SPYWARE_CR"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTINGS_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.tran.StringRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <list
            name="subnetRules"
            table="TR_SPYWARE_SR"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTINGS_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.tran.IPMaddrRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <list
            name="domainWhitelist"
            table="TR_SPYWARE_WL"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTINGS_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.tran.StringRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <property
            name="subnetVersion"
            type="int"
            update="true"
            insert="true"
            column="SUBNET_VERSION"
            not-null="true"
        />

        <property
            name="activeXVersion"
            type="int"
            update="true"
            insert="true"
            column="ACTIVEX_VERSION"
            not-null="true"
        />

        <property
            name="cookieVersion"
            type="int"
            update="true"
            insert="true"
            column="COOKIE_VERSION"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SpywareSettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
