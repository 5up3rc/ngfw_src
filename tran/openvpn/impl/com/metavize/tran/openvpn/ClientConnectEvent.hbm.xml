<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.tran.openvpn.ClientConnectEvent"
        table="tr_openvpn_connect_evt"
        mutable="false"
    >

        <id
            name="id"
            column="EVENT_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ClientConnectEvent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="address"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="remote_address" 
                sql-type="inet"
            />
        </property>

        <property
            name="port"
            type="int"
            update="true"
            insert="true"
            column="remote_port"
        />

        <property
            name="clientName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="client_name"
        />

        <property
            name="start"
            type="java.util.Date"
            update="true"
            insert="true"
            column="start_time"
        />

        <property
            name="end"
            type="java.util.Date"
            update="true"
            insert="true"
            column="end_time"
        />

        <property
            name="bytesRx"
            type="long"
            update="true"
            insert="true"
            column="rx_bytes"
        />

        <property
            name="bytesTx"
            type="long"
            update="true"
            insert="true"
            column="tx_bytes"
        />

        <property
            name="timeStamp"
            type="java.util.Date"
            update="true"
            insert="true"
            column="TIME_STAMP"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ClientConnectEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
