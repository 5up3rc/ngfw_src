<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

  <display-name>Quarantine Web App</display-name>

  <servlet>
    <servlet-name>QuarantineMain</servlet-name>
    <servlet-class>com.untangle.node.mail.web.euv.QuarantineEnduserServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
 </servlet>

  <servlet>
    <servlet-name>InboxMaintenenceControler</servlet-name>
    <servlet-class>com.untangle.node.mail.web.euv.InboxMaintenenceControler</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>RequestDigestControler</servlet-name>
    <servlet-class>com.untangle.node.mail.web.euv.RequestDigestControler</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>SafelistMaintenenceControler</servlet-name>
    <servlet-class>com.untangle.node.mail.web.euv.SafelistMaintenenceControler</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>UnremapperControler</servlet-name>
    <servlet-class>com.untangle.node.mail.web.euv.UnremapperControler</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>RemapperControler</servlet-name>
    <servlet-class>com.untangle.node.mail.web.euv.RemapperControler</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>JSONRPCServlet</servlet-name>
    <servlet-class>com.untangle.node.mail.web.euv.UtJsonRpcServlet</servlet-class>
    <init-param>
      <param-name>gzip_threshold</param-name>
      <param-value>200</param-value>
    </init-param>
  </servlet>


  @JSP_PRE_COMPILED_SERVLETS@

  <servlet-mapping>
    <servlet-name>InboxMaintenenceControler</servlet-name>
    <url-pattern>/manageuser</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RequestDigestControler</servlet-name>
    <url-pattern>/requestdigest</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>SafelistMaintenenceControler</servlet-name>
    <url-pattern>/safelist</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UnremapperControler</servlet-name>
    <url-pattern>/unmp</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>RemapperControler</servlet-name>
    <url-pattern>/mp</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>

 <servlet-mapping>
    <servlet-name>JSONRPCServlet</servlet-name>
    <url-pattern>/JSON-RPC</url-pattern>
  </servlet-mapping>

  <!--
      <servlet-mapping>
      <servlet-name>RequestDigestControler</servlet-name>
      <url-pattern>/</url-pattern>
      </servlet-mapping>
  -->

</web-app>
