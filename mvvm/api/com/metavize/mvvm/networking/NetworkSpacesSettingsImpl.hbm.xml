<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.networking.NetworkSpacesSettingsImpl"
        table="mvvm_network_settings"
    >

        <id
            name="id"
            column="settings_id"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-NetworkSpacesSettingsImpl.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="isEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="is_enabled"
        />

        <property
            name="setupState"
            type="com.metavize.mvvm.networking.SetupStateUserType"
            update="true"
            insert="true"
        >
            <column
                name="setup_state" 
            />
        </property>

        <list
            name="interfaceList"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="settings_id"
            >
            </key>

            <index
                column="position"
            />

            <one-to-many
                  class="com.metavize.mvvm.networking.Interface"
            />

        </list>

        <list
            name="networkSpaceList"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="settings_id"
            >
            </key>

            <index
                column="position"
            />

            <one-to-many
                  class="com.metavize.mvvm.networking.NetworkSpace"
            />

        </list>

        <list
            name="routingTable"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="settings_id"
            >
            </key>

            <index
                column="position"
            />

            <one-to-many
                  class="com.metavize.mvvm.networking.Route"
            />

        </list>

        <property
            name="defaultRoute"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="default_route" 
                sql-type="inet"
            />
        </property>

        <list
            name="redirectList"
            table="mvvm_redirects"
            lazy="false"
            cascade="all"
        >

            <key
                column="setting_id"
            >
            </key>

            <index
                column="position"
            />

            <many-to-many
                class="com.metavize.mvvm.networking.RedirectRule"
                column="rule_id"
                outer-join="auto"
             />

        </list>

        <property
            name="dns1"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="dns_1" 
                sql-type="inet"
            />
        </property>

        <property
            name="dns2"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="dns_2" 
                sql-type="inet"
            />
        </property>

        <property
            name="hasCompletedSetup"
            type="boolean"
            update="true"
            insert="true"
            column="completed_setup"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-NetworkSpacesSettingsImpl.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
