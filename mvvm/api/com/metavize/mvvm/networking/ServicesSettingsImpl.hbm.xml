<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.networking.ServicesSettingsImpl"
        table="mvvm_network_services"
    >

        <id
            name="id"
            column="settings_id"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ServicesSettingsImpl.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="dhcpEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="is_dhcp_enabled"
        />

        <property
            name="dhcpStartAddress"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="dhcp_start_address" 
                sql-type="inet"
            />
        </property>

        <property
            name="dhcpEndAddress"
            type="com.metavize.mvvm.type.IPaddrUserType"
            update="true"
            insert="true"
        >
            <column
                name="dhcp_end_address" 
                sql-type="inet"
            />
        </property>

        <property
            name="dhcpLeaseTime"
            type="int"
            update="true"
            insert="true"
            column="dhcp_lease_time"
        />

        <list
            name="dhcpLeaseList"
            table="mvvm_dhcp_lease_list"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="setting_id"
            >
            </key>

            <index
                column="position"
            />

            <many-to-many
                class="com.metavize.mvvm.networking.DhcpLeaseRule"
                column="rule_id"
                outer-join="auto"
             />

        </list>

        <property
            name="dnsEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="dns_enabled"
        />

        <property
            name="dnsLocalDomain"
            type="com.metavize.mvvm.type.HostNameUserType"
            update="true"
            insert="true"
        >
            <column
                name="dns_local_domain" 
            />
        </property>

        <list
            name="dnsStaticHostList"
            table="mvvm_dns_host_list"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="setting_id"
            >
            </key>

            <index
                column="position"
            />

            <many-to-many
                class="com.metavize.mvvm.networking.DnsStaticHostRule"
                column="rule_id"
                outer-join="auto"
             />

        </list>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ServicesSettingsImpl.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
