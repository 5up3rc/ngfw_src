<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.tran.IPMaddrDirectory"
        table="IPMADDR_DIR"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-IPMaddrDirectory.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <list
            name="entries"
            table="IPMADDR_DIR_ENTRIES"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="IPMADDR_DIR_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.tran.IPMaddrRule"
                column="RULE_ID"
                outer-join="auto"
             />

        </list>

        <property
            name="notes"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NOTES"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-IPMaddrDirectory.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
