<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.tran.TransformPreferences"
        table="TRANSFORM_PREFERENCES"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-TransformPreferences.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="tid"
            class="com.metavize.mvvm.security.Tid"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="TID"
        />

        <property
            name="guiBackgroundColor"
            type="com.metavize.mvvm.type.ColorUserType"
            update="true"
            insert="true"
        >
            <column
                name="RED" 
            />
            <column
                name="GREEN" 
            />
            <column
                name="BLUE" 
            />
            <column
                name="ALPHA" 
            />
        </property>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-TransformPreferences.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
