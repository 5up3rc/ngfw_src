<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.logging.LoggingSettings"
        table="LOGGING_SETTINGS"
    >

        <id
            name="id"
            column="SETTINGS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-LoggingSettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="syslogEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="SYSLOG_ENABLED"
        />

        <property
            name="syslogHost"
            type="java.lang.String"
            update="true"
            insert="true"
            column="SYSLOG_HOST"
        />

        <property
            name="syslogPort"
            type="int"
            update="true"
            insert="true"
            column="SYSLOG_PORT"
        />

        <property
            name="syslogFacility"
            type="com.metavize.mvvm.type.SyslogFacilityUserType"
            update="true"
            insert="true"
            column="SYSLOG_FACILITY"
        />

        <property
            name="syslogThreshold"
            type="com.metavize.mvvm.type.SyslogPriorityUserType"
            update="true"
            insert="true"
            column="SYSLOG_THRESHOLD"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-LoggingSettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
