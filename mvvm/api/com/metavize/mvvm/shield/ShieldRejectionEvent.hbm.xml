<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.shield.ShieldRejectionEvent"
        table="SHIELD_REJECTION_EVT"
        mutable="false"
    >

        <id
            name="id"
            column="EVENT_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ShieldRejectionEvent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="clientAddr"
            type="com.metavize.mvvm.type.InetAddressUserType"
            update="true"
            insert="true"
        >
            <column
                name="CLIENT_ADDR" 
                sql-type="inet"
            />
        </property>

        <property
            name="clientIntf"
            type="byte"
            update="true"
            insert="true"
            column="CLIENT_INTF"
        />

        <property
            name="reputation"
            type="double"
            update="true"
            insert="true"
            column="REPUTATION"
        />

        <property
            name="mode"
            type="int"
            update="true"
            insert="true"
            column="MODE"
        />

        <property
            name="limited"
            type="int"
            update="true"
            insert="true"
            column="LIMITED"
        />

        <property
            name="rejected"
            type="int"
            update="true"
            insert="true"
            column="REJECTED"
        />

        <property
            name="dropped"
            type="int"
            update="true"
            insert="true"
            column="DROPPED"
        />

        <property
            name="timeStamp"
            type="java.util.Date"
            update="true"
            insert="true"
            column="TIME_STAMP"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ShieldRejectionEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
