<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.portal.PortalUser"
        table="Portal_User"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-PortalUser.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="uid"
            type="java.lang.String"
            update="true"
            insert="true"
            column="UID"
        />

        <property
            name="live"
            type="boolean"
            update="true"
            insert="true"
            column="LIVE"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="DESCRIPTION"
        />

        <many-to-one
            name="portalGroup"
            class="com.metavize.mvvm.portal.PortalGroup"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="group_id"
        />

        <many-to-one
            name="portalHomeSettings"
            class="com.metavize.mvvm.portal.PortalHomeSettings"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="home_settings_id"
        />

        <list
            name="bookmarks"
            table="PORTAL_USER_BM_MT"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SETTINGS_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <many-to-many
                class="com.metavize.mvvm.portal.Bookmark"
                column="BOOKMARK_ID"
                outer-join="auto"
             />

        </list>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-PortalUser.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
