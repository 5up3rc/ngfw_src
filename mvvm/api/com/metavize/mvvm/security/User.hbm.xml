<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.security.User"
        table="MVVM_USER"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-User.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="login"
            type="java.lang.String"
            update="true"
            insert="true"
            column="LOGIN"
            length="24"
            not-null="true"
        />

        <property
            name="password"
            type="binary"
            update="true"
            insert="true"
            column="PASSWORD"
            length="24"
            not-null="true"
        />

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NAME"
            length="64"
            not-null="true"
        />

        <property
            name="readOnly"
            type="boolean"
            update="true"
            insert="true"
            column="READ_ONLY"
            not-null="true"
        />

        <property
            name="notes"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NOTES"
            length="256"
        />

        <property
            name="sendAlerts"
            type="boolean"
            update="true"
            insert="true"
            column="SEND_ALERTS"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-User.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
