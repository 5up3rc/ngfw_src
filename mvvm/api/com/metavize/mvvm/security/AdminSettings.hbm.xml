<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.security.AdminSettings"
        table="ADMIN_SETTINGS"
    >

        <id
            name="id"
            column="ADMIN_SETTINGS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-AdminSettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <set
            name="users"
            lazy="false"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="ADMIN_SETTING_ID"
            >
            </key>

            <one-to-many
                  class="com.metavize.mvvm.security.User"
            />

        </set>

        <many-to-one
            name="summaryPeriod"
            class="com.metavize.mvvm.Period"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="SUMMARY_PERIOD_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AdminSettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
