<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.policy.UserPolicyRuleSet"
        table="MVVM_USER_POLICY_RULES"
    >

        <id
            name="id"
            column="SET_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-UserPolicyRuleSet.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <list
            name="rules"
            lazy="false"
            cascade="all-delete-orphan"
        >

            <key
                column="SET_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <one-to-many
                  class="com.metavize.mvvm.policy.UserPolicyRule"
            />

        </list>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-UserPolicyRuleSet.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
