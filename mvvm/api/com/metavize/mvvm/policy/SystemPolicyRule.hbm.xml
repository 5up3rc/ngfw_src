<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.policy.SystemPolicyRule"
        table="SYSTEM_POLICY_RULE"
    >

        <id
            name="id"
            column="RULE_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SystemPolicyRule.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="clientIntf"
            type="byte"
            update="true"
            insert="true"
            column="CLIENT_INTF"
            not-null="true"
        />

        <property
            name="serverIntf"
            type="byte"
            update="true"
            insert="true"
            column="SERVER_INTF"
            not-null="true"
        />

        <many-to-one
            name="policy"
            class="com.metavize.mvvm.policy.Policy"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="POLICY_ID"
        />

        <property
            name="inbound"
            type="boolean"
            update="true"
            insert="true"
            column="IS_INBOUND"
            not-null="true"
        />

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NAME"
        />

        <property
            name="category"
            type="java.lang.String"
            update="true"
            insert="true"
            column="CATEGORY"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="DESCRIPTION"
        />

        <property
            name="live"
            type="boolean"
            update="true"
            insert="true"
            column="LIVE"
        />

        <property
            name="alert"
            type="boolean"
            update="true"
            insert="true"
            column="ALERT"
        />

        <property
            name="log"
            type="boolean"
            update="true"
            insert="true"
            column="LOG"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SystemPolicyRule.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
