<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.addrbook.RepositorySettings"
        table="AB_REPOSITORY_SETTINGS"
    >

        <id
            name="id"
            column="SETTINGS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-RepositorySettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="superuser"
            type="java.lang.String"
            update="true"
            insert="true"
            column="SUPERUSER"
        />

        <property
            name="superuserPass"
            type="java.lang.String"
            update="true"
            insert="true"
            column="SUPERUSER_PASS"
        />

        <property
            name="domain"
            type="java.lang.String"
            update="true"
            insert="true"
            column="DOMAIN"
        />

        <property
            name="LDAPHost"
            type="java.lang.String"
            update="true"
            insert="true"
            column="LDAP_HOST"
        />

        <property
            name="LDAPPort"
            type="int"
            update="true"
            insert="true"
            column="PORT"
        />

        <property
            name="OUFilter"
            type="java.lang.String"
            update="true"
            insert="true"
            column="OU_FILTER"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-RepositorySettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
