<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.toolbox.UpgradeSettings"
        table="upgrade_settings"
    >

        <id
            name="id"
            column="UPGRADE_SETTINGS_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-UpgradeSettings.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="autoUpgrade"
            type="boolean"
            update="true"
            insert="true"
            column="AUTO_UPGRADE"
            not-null="true"
        />

        <many-to-one
            name="period"
            class="com.metavize.mvvm.Period"
            cascade="all"
            outer-join="auto"
            update="true"
            insert="true"
            column="PERIOD"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-UpgradeSettings.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
