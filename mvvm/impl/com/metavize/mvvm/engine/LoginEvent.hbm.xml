<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.engine.LoginEvent"
        table="MVVM_LOGIN_EVT"
        mutable="false"
    >

        <id
            name="id"
            column="EVENT_ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-LoginEvent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="clientAddr"
            type="com.metavize.mvvm.type.InetAddressUserType"
            update="true"
            insert="true"
        >
            <column
                name="CLIENT_ADDR" 
                sql-type="inet"
            />
        </property>

        <property
            name="login"
            type="java.lang.String"
            update="true"
            insert="true"
            column="LOGIN"
        />

        <property
            name="local"
            type="boolean"
            update="true"
            insert="true"
            column="LOCAL"
        />

        <property
            name="succeeded"
            type="boolean"
            update="true"
            insert="true"
            column="SUCCEEDED"
        />

        <property
            name="reason"
            type="com.metavize.mvvm.security.LoginFailureReasonUserType"
            update="true"
            insert="true"
            column="REASON"
        />

        <property
            name="timeStamp"
            type="java.util.Date"
            update="true"
            insert="true"
            column="TIME_STAMP"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-LoginEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
