<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"
>
    <class
        name="com.metavize.mvvm.engine.TransformPersistentState"
        table="TRANSFORM_PERSISTENT_STATE"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-TransformPersistentState.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="tid"
            class="com.metavize.mvvm.security.Tid"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="TID"
            not-null="true"
        />

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="NAME"
            length="64"
            not-null="true"
        />

        <list
            name="args"
            table="TRANSFORM_ARGS"
            lazy="false"
            cascade="none"
        >

            <key
                column="TPS_ID"
            >
            </key>

            <index
                column="POSITION"
            />

            <element
                column="ARG"
                type="string"
                not-null="true"
                unique="false"
            />

        </list>

        <property
            name="publicKey"
            type="binary"
            update="true"
            insert="true"
            column="PUBLIC_KEY"
            length="16"
            not-null="true"
        />

        <property
            name="targetState"
            type="com.metavize.mvvm.type.TransformStateUserType"
            update="true"
            insert="true"
            column="TARGET_STATE"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-TransformPersistentState.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
