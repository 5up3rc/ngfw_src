<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document
	PUBLIC "-//UJAC.org//Print Document//EN" 
	"http://ujac.sourceforge.net/ujac-print-document.dtd">

<document size="LETTER" margin-left="25" margin-right="25" margin-top="25" margin-bottom="25">
  <font-def name="title"       family="Helvetica" size="18" style="normal"/>
  <font-def name="reportTitle" family="Helvetica" size="16" style="bold"/>
  <font-def name="normal"      family="Helvetica" size="12" style="normal"/>
  <font-def name="link"        family="Helvetica" size="12" style="italic"/>
  <font-def name="small"       family="Helvetica" size="9"  style="normal"/>

  <style-def name="table.bordered" 
             border-style="top|bottom|left|right" border-width="0.5" font="normal"/>

  <table halign="center" widths="60,40" width="90" spacing-after="20">
    <table-row>
      <cell>
        <paragraph font="title" halign="left">
          EdgeReport ${type} Briefings
        </paragraph>
      </cell>
    
      <cell>
        <paragraph font="small" halign="right">
          ${start} to ${end}
        </paragraph>
      </cell>
    </table-row>
  </table>

  <table class="bordered" halign="center" widths="10,10,62,18" width="90" leading="0">
    <foreach sequence="${reports}" loop-variable="row">
      <!-- Toggle the colors back and forth -->
      <toggle-property name="mainColor" type="String" a="eeeeee" b="dddddd"/>
      <toggle-property name="linkColor" type="String" a="e4e4e4" b="d4d4d4"/>

      <!-- Get the icon for the organization, use the default if necessary -->
      <set-property name="iconOrganization" type="String" value="${defaultOrganizationIcon}"/>
      <if cond='${row.iconOrganization != ""}'>
        <set-property name="iconOrganization" type="String" value="${row.iconOrganization}"/>
      </if>
      
      <table-row padding-bottom="7" padding-top="2" leading="0" valign="middle">
        <!-- Cell for the organization icon -->
        <cell bgcolor="${mainColor}" halign="center">
          <image source="${imageDirectory + iconOrganization}" height="30"/>
        </cell>

        <!-- Cell for the description icon -->
        <cell bgcolor="${mainColor}" halign="center">
          <image source="${imageDirectory + row.iconDescription}" height="30"/>
        </cell>

        <!-- Cell for the title -->
        <cell padding-left="10" font="reportTitle" bgcolor="${mainColor}">${row.title}</cell>

        <!-- Cell for the link to the document -->
        <cell halign="center" font="link" bgcolor="${linkColor}">
          <anchor reference="${'#' + row.link}">
            click here
          </anchor>
        </cell>
      </table-row>
    </foreach>
  </table>
</document>
