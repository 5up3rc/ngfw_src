generate_user_content_area ()
{
ucnt=0

while read line
do
if [ "${line}" = "" ]; then
    # skip blank lines
    continue
fi

    USERNAME=$line
    USERSUM_HTML=`echo ${rep_base}--${USERNAME}--${period}.html`
    USERSUM_PDF=`echo ${rep_base}--${USERNAME}--${period}.pdf`

if [ "$generate_email_index" = true ]; then
    if [ ! -f ${tran_dir}/${USERSUM_PDF} ] ; then
        # for this time period, no data was associated with this username
        # (no report was generated) so skip username
        continue
    fi

cat >> $base_file <<EOF
<tr valign=top>
  <td><img src="../images/px" style="width: 20px; height: 13px"></td>
  <td colspan=4><span style="font-family: SansSerif; font-size: 9.0px;">$USERNAME</span></td>
  <td colspan=6><span style="font-family: SansSerif; font-size: 9.0px; text-align: right">(<a href="$USERSUM_PDF">PDF</a>)&nbsp;</span></td>
  <td colspan=9><img src="../images/px" style="width: 316px; height: 13px"></td>
</tr>
EOF

else
    if [ ! -f ${tran_dir}/${USERSUM_HTML} ] ; then
        # for this time period, no data was associated with this username
        # (no report was generated) so skip username
        continue
    fi

cat >> $base_file <<EOF
<tr valign=top>
  <td><img src="../images/px" style="width: 20px; height: 13px"></td>
  <td colspan=4><span style="font-family: SansSerif; font-size: 9.0px;">$USERNAME</span></td>
  <td colspan=6><span style="font-family: SansSerif; font-size: 9.0px; text-align: right">(<a href="$USERSUM_HTML">HTML</a> | <a href="$USERSUM_PDF">PDF</a>)&nbsp;</span></td>
  <td colspan=9><img src="../images/px" style="width: 316px; height: 13px"></td>
</tr>
EOF

fi

ucnt=$((ucnt+1))

done < $base_dir/uname.lst

if (( ucnt == 0 )); then

cat >> $base_file <<EOF
<tr valign=top>
  <td><img src="../images/px" style="width: 20px; height: 13px"></td>
  <td colspan=12><span style="font-family: SansSerif; font-size: 9.0px;">
  &lt;No user events were detected during this time period.&gt;
  </span></td>
  <td colspan=9><img src="../images/px" style="width: 316px; height: 13px"></td>
</tr>
EOF

fi
}

generate_hname_content_area ()
{
hcnt=0

while read line
do
if [ "${line}" = "" ]; then
    # skip blank lines
    continue
fi

    HNAME=$line
    HNAMESUM_HTML=`echo ${rep_base}--${HNAME}--${period}.html`
    HNAMESUM_PDF=`echo ${rep_base}--${HNAME}--${period}.pdf`

if [ "$generate_email_index" = true ]; then
    if [ ! -f ${tran_dir}/${HNAMESUM_PDF} ] ; then
        # for this time period, no data was associated with this hostname
        # (no report was generated) so skip hostname
        continue
    fi

cat >> $base_file <<EOF
<tr valign=top>
  <td><img src="../images/px" style="width: 20px; height: 13px"></td>
  <td colspan=4><span style="font-family: SansSerif; font-size: 9.0px;">$HNAME</span></td>
  <td colspan=6><span style="font-family: SansSerif; font-size: 9.0px; text-align: right">(<a href="$HNAMESUM_PDF">PDF</a>)&nbsp;</span></td>
  <td colspan=9><img src="../images/px" style="width: 316px; height: 13px"></td>
</tr>
EOF

else
    if [ ! -f ${tran_dir}/${HNAMESUM_HTML} ] ; then
        # for this time period, no data was associated with this hostname
        # (no report was generated) so skip hostname
        continue
    fi

cat >> $base_file <<EOF
<tr valign=top>
  <td><img src="../images/px" style="width: 20px; height: 13px"></td>
  <td colspan=4><span style="font-family: SansSerif; font-size: 9.0px;">$HNAME</span></td>
  <td colspan=6><span style="font-family: SansSerif; font-size: 9.0px; text-align: right">(<a href="$HNAMESUM_HTML">HTML</a> | <a href="$HNAMESUM_PDF">PDF</a>)&nbsp;</span></td>
  <td colspan=9><img src="../images/px" style="width: 316px; height: 13px"></td>
</tr>
EOF

fi

hcnt=$((hcnt+1))

done < $base_dir/hname.lst

if (( hcnt == 0 )); then

cat >> $base_file <<EOF
<tr valign=top>
  <td><img src="../images/px" style="width: 20px; height: 13px"></td>
  <td colspan=12><span style="font-family: SansSerif; font-size: 9.0px;">
  &lt;No client events were detected during this time period.&gt;
  </span></td>
  <td colspan=9><img src="../images/px" style="width: 316px; height: 13px"></td>
</tr>
EOF

fi
}

generate_page

cd $OLD_PWD
