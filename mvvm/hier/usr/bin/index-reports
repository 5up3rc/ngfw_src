{
cat > $main_index <<EOF

<html xmlns="http://www.w3.org/1999/xhtml">

  <!-- HEADING -->
  <head>
    <title>Metavize EdgeReport</title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1"/>


    <style type="text/css">
    <!--
